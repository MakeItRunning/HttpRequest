<?xml version="1.0" encoding="utf-8"?>
<!-- 找回密码 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical" >

    <include layout="@layout/title_style_two" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_marginBottom="2dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.1"
            android:text="　手机号码:" />

        <EditText
            android:id="@+id/et_reget_mobiles"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3.0"
            android:background="@color/transparent"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/txt_fg_normal"
            android:textColorHint="@color/black_trans"
            android:textSize="16.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height3"
        android:layout_marginTop="10dp"
        android:layout_margin="2dip"
        android:background="@color/white" >

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.1"
            android:text="身份证号码:" />

        <EditText
            android:id="@id/et_reget_cert_no"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3.0"
            android:background="@color/transparent"
            android:digits="1234567890xX"
            android:hint="请输入身份证号码"
            android:imeOptions="actionNext"
            android:maxLength="18"
            android:singleLine="true"
            android:textColor="@color/txt_fg_normal"
            android:textColorHint="@color/black_trans"
            android:textSize="16.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height3"
        android:layout_marginTop="10dp"
        android:layout_margin="2dip"
        android:background="@color/white" >

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.1"
            android:text="短信验证码:" />

        <EditText
            android:id="@id/et_reget_verif_code"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.0"
            android:background="@color/transparent"
            android:hint="请输入短信验证码"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/txt_fg_normal"
            android:textColorHint="@color/black_trans"
            android:textSize="16.0dip" />

        <Button
            android:id="@id/btn_reget_get_verif_code"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_next_normal"
            android:layout_gravity="center"
            android:layout_marginBottom="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="5.0dip"
            android:textColor="@color/white"
            android:layout_weight="1.0"
            android:text="获取验证码"
            android:textSize="10.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20.0dip" >

        <Button
            android:id="@id/btn_reget_submit"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/reg_btn_next_height"
            android:layout_weight="1.0"
            android:background="@drawable/button01_bg"
            android:text="找回密码"
            android:textColor="@color/white"
            android:textSize="20.0dip" />
    </LinearLayout>

</LinearLayout>