<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/apptitle"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/head_por"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/userhead_bg" />

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/tv_level"
            android:maxLength="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/head_por"
            android:layout_marginBottom="6dp"
            android:layout_toRightOf="@+id/head_por"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/apptitle"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />

        <!-- <ImageView -->
        <!-- android:layout_width="100dp" -->
        <!-- android:layout_height="40dp" -->
        <!-- android:layout_alignParentBottom="true" -->
        <!-- android:layout_marginLeft="20dp" -->
        <!-- android:layout_toRightOf="@+id/apptitle" -->
        <!-- android:src="@drawable/app_title_e" /> -->

        <TextView
            android:id="@+id/title_names"
            style="@style/text_style_18_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:text="首页"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="gone" />

        <!-- <ImageView -->
        <!-- android:layout_width="40dp" -->
        <!-- android:layout_height="40dp" -->
        <!-- android:layout_centerInParent="true" -->
        <!-- android:layout_alignParentRight="true" -->
        <!-- android:layout_marginRight="10dp" -->
        <!-- /> -->

        <TextView
            android:id="@+id/bt_main_title_right"
            style="@style/title_btn_bg_theme2"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/bt_main_title_right1"
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/return_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/imgs"
                android:gravity="center"
                android:text="账单"
                android:textColor="@color/white"
                android:textSize="15dp" />
            <!-- android:drawableRight="@drawable/return_selector" -->

            <ImageView
                android:id="@+id/imgs"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/menu_img" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>