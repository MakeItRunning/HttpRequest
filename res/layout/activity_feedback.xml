<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include layout="@layout/title_style_two" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="反馈内容"
                android:textColor="@color/txt_fg_normal"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/fb_edit1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="top"
                android:maxLength="200"
                android:hint="请在这里输入您想对我们说的话(200字以内)"
                android:textSize="14dp"
                android:background="@drawable/air_n_single_img" />

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="您的联系方式(Email/手机/QQ)"
                android:textColor="@color/txt_fg_normal"
                android:textSize="14dp" />

            <EditText
                android:visibility="gone"
                android:id="@+id/fb_edit2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/air_n_single_img" />

            <Button
                android:id="@+id/fb_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/reg_btn_next_height"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button01_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="20.0dip" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedstr"
                android:textColor="@color/prompt"
                android:textSize="12dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>